
profiles {

  standard {
    includeConfig 'conf/uppmax.conf'
  }
  
  testing_local {
    env.TRIMMOMATIC_HOME = "/usr/local/Cellar/trimmomatic/0.33/share/java/"
    process.executor = 'local'
    cpus = { 1 * task.attempt }
    memory = { 1.GB * task.attempt }
    time = { 1.h * task.attempt }
    errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
    maxRetries = 3
    maxErrors = '-1'
  }

}
